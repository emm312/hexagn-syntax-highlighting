{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Hexagn",
    "patterns": [
        { "include": "#disable-textmate" },
        { "include": "#keywords" },
        { "include": "#numeric" },
        { "include": "#import" },
        { "include": "#function" },
        { "include": "#type" },
        { "include": "#import" },
        { "include": "#strings" },
		{ "include": "#operators"},
        { "include": "#identifiers" },
        { "include": "#comment" },
        { "include": "#comment-line" },
        { "include": "#comment-block"},
        { "include": "#comments"},
        { "include": "#whitespace" },
        { "include": "#variable"}
    ],
    "repository": {
        "disable-textmate": {
			"begin": "(?i)^\\s*//\\s*TextMate\\s*:?\\s*Disable\\s*$",
			"end": "(?i)^\\s*//\\s*TextMate\\s*:?\\s*Enable\\s*$"
		},
        "comment-line": {
			"match": " //.*",
			"name": "comment"
		},
		"comment-block": {
			"begin": "(/\\*)",
			"end": "\\*/",
			"name": "comment",
			"contentName": "comment"
		},
        "function": {
			
            "begin": "\\b([_a-zA-Z]\\w*)\\s*\\(",
            "end": "\\)",
            "contentName": "function.hexagn",
            "captures": {
                "1": { "name": "support.function.hexagn" }
            },
			"patterns": [ 
                { "include": "#strings"}, 
                { "include": "#operators"},
                { "include": "#comment" },
                { "include": "#comment-line" },
                { "include": "#comment-block"},
                { "include": "#comments"} ]
        },
        "numeric": {
            "name": "constant.numeric.hexagn",
            "match": "\\b(0x\\h*|0b[01]*|\\d+)\\b"
        },
        "type": {
            "name": "keyword.hexagn",
            "match": "\\b(u?int(8|16|32)|char|string|float)\\b"
        },
        "import": {
            "name": "keyword.control.hexagn",
            "match": "\\b(import)\\b"
        },
        "keywords": {
            "name": "keyword.control.hexagn",
            "match": "\\b(if|else|while|for|return|urcl)\\b"
        },
        "strings": {
            "name": "string.quoted.double.hexagn",
            "begin": "(\"|')",
            "end": "(\"|')",
            "patterns": [
                {
                    "name": "constant.character.escape.hexagn",
                    "match": "\\\\."
                }
            ]
        },
		"operators": {
			"name": "keyword.operator.hexagn",
			"match": "(==|!=|>=|<=|>|<|\\+|-|/|\\*|\\^)"
	    },
        "variable": {
            "name": "variable.hexagn",
            "match": "[A-Za-z_]\\w*"
        }
        
    },
    "scopeName": "source.hxgn"
}